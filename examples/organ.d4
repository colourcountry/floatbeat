( Additive synth )

:: scale divisions ;

8 5Hz divisions
nip
from
    (1) A Lead,
    (2) A' Lead,
    (3) E Lead,
    (4) D' Lead,
    (5) B Lead,
    (6) E low Lead,
    (7) G' Lead,
    (8) D Lead
choose

(instruments)

    :Lead (freq -- SOUND)
        2/ organ & room.
    ;

(oscillators)

    :organ (freq -- pcm)
        dup sin swap
        dup 3* sin 0.3* swap
        2* sin
        + +
    ;

(filters)

    :room (pcm -- pcm)
        _delay 0.2s old 0.2* + dup keep _delay 0.5*
    ;

