( Lead synth with pulse width modulation )

:: scale divisions ;

8 5Hz divisions
nip
from
    (1) A Lead,
    (2) A' Lead,
    (3) E Lead,
    (4) D' Lead,
    (5) B Lead,
    (6) E low Lead,
    (7) G' Lead,
    (8) D Lead
choose

(instruments)

    :Lead (freq -- SOUND)
        dup low tr 2*. pwm pulse.
    ;

(oscillators)

    :pwm  (freq -- pcm)
        10Hz sin 0.05* 0.25+
    ;
