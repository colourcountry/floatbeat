( ticks ) ::ticks env;

4 96bpm 2* ticks
from
hat,
hat,
hat,
hat
choose

(instruments: age -- SOUND)

:kick
    dup 0.7< if
        dup 0.7~ 0.7/
        swap 2*
        70 Hz
        swap dup* 1~ 4* +
        T sin 1.2** .
    else
        drop
    then
;


:snare
    dup 0.5< if
        0.43~
        noise* 5/.
    else
        drop
    then
;

:hat
    440Hz T sin swap 0.01s 0.5s env.
;
